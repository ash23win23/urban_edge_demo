<div class="container mx-auto mt-8">
  <div class="max-w-md mx-auto bg-white shadow-md rounded p-6 mb-4">
    <h1 class="text-2xl font-bold mb-4">Categories</h1>

    <ul class="list-disc ml-4">
      <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, category, class: 'text-blue-500 hover:text-blue-700' %>
        </li>
      <% end %>
    </ul>

    <div class="mt-4">
      <%= link_to 'New Category', new_category_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
  </div>
</div>
