<div class="container mx-auto mt-8">
  <div class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h1 class="text-2xl font-bold mb-4">New Product</h1>

    <%= form_for @product, html: { class: "w-full" } do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :category, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.collection_select :category_id, @categories, :id, :name, { prompt: "Select a category" }, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_area :description, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :price, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.number_field :price, step: 0.01, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline", required: true %>
      </div>

      <div class="flex items-center justify-center">
        <%= f.submit 'Create Product', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to 'Back to Products', products_path, class: 'text-gray-500 hover:text-gray-700' %>
    </div>
  </div>
</div>
