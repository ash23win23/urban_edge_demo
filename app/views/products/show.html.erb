<div class="container mx-auto mt-8">
  <div class="max-w-2xl mx-auto bg-white overflow-hidden shadow-md rounded-lg">
    <div class="px-6 py-4">
      <h2 class="text-3xl font-bold mb-2"><%= @product.name %></h2>
      <p class="text-gray-600 mb-2"><%= @product.category.name %></p>
      <p class="text-gray-600 mb-4"><%= @product.description %></p>
      <p class="text-blue-500 font-bold"><%= number_to_currency(@product.price) %></p>
    </div>

    <!-- Edit and Delete links -->
    <% if user_signed_in? %>
      <div class="px-6 py-4">
        <%= link_to 'Edit Product', edit_product_path(@product), class: 'text-blue-500 hover:text-blue-700 mr-4' %>
        <%= link_to 'Delete Product', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
      </div>
    <% end %>

    <!-- Back to Products link -->
    <div class="px-6 py-4">
      <%= link_to 'Back to Products', products_path, class: 'text-gray-500 hover:text-gray-700' %>
    </div>
  </div>
</div>
